{
	"name": "@microflow/figma-plugin",
	"private": true,
	"version": "0.1.4",
	"scripts": {
		"dev": "concurrently \"yarn watch:ui\" \"yarn watch:plugin\"",
		"dev:ui-only": "vite -c ./vite.config.ui.ts",
		"watch:ui": "npm run build:ui -- --watch --mode=development",
		"watch:plugin": "npm run build:plugin -- --watch --mode=development",
		"clean": "rimraf dist/*",
		"types": "yarn types:src & yarn types:node",
		"types:src": "tsc",
		"types:node": "tsc -P tsconfig.node.json",
		"build": "yarn build:ui & yarn build:plugin",
		"prebuild": "yarn clean",
		"build:ui": "vite build -c ./vite.config.ui.ts",
		"build:plugin": "vite build -c ./vite.config.plugin.ts"
	},
	"dependencies": {
		"@microflow/mqtt": "workspaces:*",
		"@microflow/ui": "workspaces:*",
		"mqtt": "^5.8.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.25.0",
		"unique-names-generator": "^4.7.1",
		"usehooks-ts": "^3.1.0"
	},
	"devDependencies": {
		"@figma/plugin-typings": "^1.83.0",
		"@types/node": "^18.15.11",
		"@types/postcss-url": "^10.0.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"postcss": "^8.4.39",
		"rimraf": "^5.0.5",
		"rollup": "^4.19.1",
		"tailwindcss": "^3.4.5",
		"typescript": "^5.3.0",
		"vite": "^5.0.11",
		"vite-plugin-generate-file": "^0.1.1",
		"vite-plugin-singlefile": "^0.13.5"
	}
}
